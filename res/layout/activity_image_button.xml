<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageButtonActivity" >

    <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="fill_parent"
       android:orientation="horizontal" >
       <ImageButton 
          android:id="@+id/gps"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:visibility="visible"
          android:src="@drawable/stat_sys_ringer_silent"
          />
       
       <ImageButton 
          android:id="@+id/wifi"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:visibility="visible"
          android:src="@drawable/stat_sys_wifi_signal_0"
          />
       
       <ImageButton 
          android:id="@+id/bluetooth"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:visibility="visible"
          android:src="@drawable/stat_sys_data_bluetooth"
          />
       
       <ImageButton 
          android:id="@+id/flightmode"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:visibility="visible"
          android:src="@drawable/stat_sys_signal_flightmode"
          />
    </LinearLayout>

</RelativeLayout>